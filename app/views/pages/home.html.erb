<h1 id="header">Welcome to Lehi's Random Lunch Generator</h1>

<div class="container-fluid">

  <div class="button-container">
    

   <button class="close"><%= link_to "Find me lunch!", @random_rest, class: "home-button btn-primary" %></button>

    <button class="close"><% if logged_in?(:user) %>
        <%= link_to "Add a new Restaurant", new_restaurant_path, class: "logged-out btn btn-primary" %></button>
    <% else %>
        <button class="close"><%= link_to "Login to add a Restaurant", new_user_session_path, class: "logged-out btn btn-primary" %></button>
    <% end %>
  </div>
</div>

